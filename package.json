  "description": "MCP server for Huly integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dearlordylord/huly-mcp.git"
  },
