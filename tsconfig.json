{
  "compilerOptions": {
    // Build Performance
    "incremental": true,
    "composite": true,

    // Module System (Node.js app)
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",

    // Import Handling
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,

    // Type Safety
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,

    // Development
    "outDir": "dist",
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,

    // Effect Integration
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
